<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="655.0" prefWidth="550.0"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="javaCode.user.ProfileController">
    <Label fx:id="lblName" layoutX="16.0" layoutY="22.0" prefHeight="18.0" prefWidth="162.0" text="Name:">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <Label fx:id="lblPhone" layoutX="189.0" layoutY="22.0" prefHeight="18.0" prefWidth="129.0" text="Phone:">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <Label fx:id="lblEmail" layoutX="332.0" layoutY="22.0" prefHeight="18.0" prefWidth="179.0" text="Email:">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <Button layoutX="16.0" layoutY="48.0" mnemonicParsing="false" onAction="#updateInfo" prefHeight="27.0"
            prefWidth="96.0" text="Update info"/>
    <TableView fx:id="ordersTV" layoutX="15.0" layoutY="131.0" onMouseClicked="#updateTVfinished" prefHeight="237.0"
               prefWidth="520.0">
        <columns>
            <TableColumn prefWidth="153.0" text="Date">
                <cellValueFactory>
                    <PropertyValueFactory property="orderStarted"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="78.0" text="OrderNr">
                <cellValueFactory>
                    <PropertyValueFactory property="orderNr"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="79.0" text="Car type">
                <cellValueFactory>
                    <PropertyValueFactory property="carType"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="94.0" text="Color">
                <cellValueFactory>
                    <PropertyValueFactory property="carColor"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="115.0" text="Total price">
                <cellValueFactory>
                    <PropertyValueFactory property="totalPrice"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <Label fx:id="lblHeader" layoutX="15.0" layoutY="96.0" prefHeight="26.0" prefWidth="179.0"
           text="Finished orders">
        <font>
            <Font size="16.0"/>
        </font>
    </Label>
    <Button fx:id="btnChange" layoutX="155.0" layoutY="625.0" mnemonicParsing="false" onAction="#changeOrder"
            prefHeight="27.0" prefWidth="96.0" text="Change order" visible="false">
        <font>
            <Font size="11.0"/>
        </font>
    </Button>
    <Button fx:id="btnFinish" layoutX="269.0" layoutY="625.0" mnemonicParsing="false" onAction="#finishOrder"
            prefHeight="27.0" prefWidth="78.0" text="Finish order" visible="false">
        <font>
            <Font size="11.0"/>
        </font>
    </Button>
    <Button fx:id="btnDelete" layoutX="369.0" layoutY="625.0" mnemonicParsing="false" onAction="#deleteOrder"
            prefHeight="27.0" prefWidth="78.0" text="Delete" visible="false"/>
    <TableView fx:id="orderedComponentsTV" layoutX="16.0" layoutY="392.0" prefHeight="227.0" prefWidth="242.0">
        <columns>
            <TableColumn prefWidth="142.0" text="Type">
                <cellValueFactory>
                    <PropertyValueFactory property="componentType"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="99.0" text="Price">
                <cellValueFactory>
                    <PropertyValueFactory property="componentPrice"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <TableView fx:id="orderedAdjustmentsTV" layoutX="284.0" layoutY="392.0" prefHeight="227.0" prefWidth="248.0">
        <columns>
            <TableColumn prefWidth="155.0" text="Type">
                <cellValueFactory>
                    <PropertyValueFactory property="adjustmentType"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="105.0" text="Price">
                <cellValueFactory>
                    <PropertyValueFactory property="adjustmentPrice"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <Label layoutX="16.0" layoutY="369.0" prefHeight="26.0" prefWidth="242.0" text="Components in selected order">
        <font>
            <Font size="16.0"/>
        </font>
    </Label>
    <Label layoutX="286.0" layoutY="369.0" prefHeight="26.0" prefWidth="248.0" text="Adjustments in selected order">
        <font>
            <Font size="16.0"/>
        </font>
    </Label>
    <Button layoutX="16.0" layoutY="625.0" mnemonicParsing="false" onAction="#back" text="Back"/>
    <Button fx:id="btnExportFinished" layoutX="408.0" layoutY="96.0" mnemonicParsing="false"
            onAction="#btnExportFinishedOnClick" prefHeight="26.0" prefWidth="130.0" text="Export to Excel"/>
    <Button fx:id="btnShowFinished" layoutX="381.0" layoutY="96.0" mnemonicParsing="false" onAction="#showFinsihed"
            prefHeight="27.0" prefWidth="143.0" text="Show finished orders" visible="false">
        <font>
            <Font size="11.0"/>
        </font>
    </Button>
    <Button fx:id="btnShowOngoing" layoutX="218.0" layoutY="96.0" mnemonicParsing="false" onAction="#showOngoing"
            prefHeight="27.0" prefWidth="180.0" text="Show ongoing orders"/>
</AnchorPane>
